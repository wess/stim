{
  "name": "stim-lang",
  "displayName": "Stim Language Support",
  "description": "Syntax highlighting and language support for Stim DSL (.stim files)",
  "version": "1.0.0",
  "publisher": "stim-lang",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "stim",
    "dsl",
    "claude",
    "automation",
    "commands"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "stim",
        "aliases": ["Stim", "stim"],
        "extensions": [".stim"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "stim",
        "scopeName": "source.stim",
        "path": "./syntaxes/stim.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "stim.compile",
        "title": "Compile Stim File",
        "category": "Stim"
      },
      {
        "command": "stim.compileAndRun",
        "title": "Compile and Test in Claude Code",
        "category": "Stim"
      },
      {
        "command": "stim.newCommand",
        "title": "New Stim Command",
        "category": "Stim"
      }
    ],
    "keybindings": [
      {
        "command": "stim.compile",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "resourceExtname == .stim"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .stim",
          "command": "stim.compile",
          "group": "stim"
        },
        {
          "when": "resourceExtname == .stim",
          "command": "stim.compileAndRun",
          "group": "stim"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .stim",
          "command": "stim.compile",
          "group": "stim"
        }
      ]
    },
    "snippets": [
      {
        "language": "stim",
        "path": "./snippets/stim.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "activationEvents": [
    "onLanguage:stim"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wess/stim.git"
  },
  "license": "MIT"
}