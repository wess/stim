{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Stim",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#command"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#booleans"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#arrays"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.stim",
          "begin": "//",
          "end": "$"
        }
      ]
    },
    "command": {
      "patterns": [
        {
          "name": "meta.command.stim",
          "begin": "\\b(command)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\{",
          "end": "\\}",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.stim"
            },
            "2": {
              "name": "entity.name.function.stim"
            }
          },
          "patterns": [
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.stim",
          "match": "\\b(if|else|while|for|in|break|command)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.stim",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.stim",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.stim",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.stim",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.stim",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.stim",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.stim",
          "match": "(==|!=)"
        },
        {
          "name": "keyword.operator.logical.stim",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.stim",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.stim",
          "match": "\\+"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.stim",
          "match": "\\b(ask|confirm|wait_for_response|create_file|git_init|git_commit|git_push|github_create_repo)\\b(?=\\s*\\()"
        },
        {
          "name": "support.function.stim",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b(?=\\s*\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.stim",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "arrays": {
      "patterns": [
        {
          "name": "meta.array.stim",
          "begin": "\\[",
          "end": "\\]",
          "patterns": [
            {
              "include": "#strings"
            },
            {
              "include": "#numbers"
            },
            {
              "include": "#booleans"
            },
            {
              "include": "#variables"
            }
          ]
        }
      ]
    }
  },
  "scopeName": "source.stim"
}